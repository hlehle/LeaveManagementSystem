<table>
    <tr>
        <th>Employer Name</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Type of leave</th>
        <th>No of leave days</th>
        <th>Stand in</th>
        <th>Status</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Emp_Name</td>
            <td>@item.First_Day.</td>
            <td>@item.Last_Day</td>
            <td>@item.Type_Leave</td>
            <td>@item.Leave_Days</td>
            <td>@item.standIn</td>
            <td>@item.App_Status</td>
        </tr>
    }
</table>
